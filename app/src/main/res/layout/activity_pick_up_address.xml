<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pick_up_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="10dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:background="#d3d3d3"
    tools:context="com.example.admin.logisticbox.Pick_up_address">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name*              :"
            android:layout_marginTop="10dp"
            android:id="@+id/pickup_tv_name"
            />
        <EditText
            android:layout_width="200dp"
            android:singleLine="true"
            android:layout_height="30dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp"
            android:id="@+id/pickup_et_name"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Company         :"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_tv_company"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_et_company"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Address*          :"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_tv_address"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:lines="3"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:id="@+id/pickup_et_address"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="City*                  :"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_tv_city"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_et_city"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="State*               :"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_tv_state"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_et_state"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Postcode*       :"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_tv_postcode"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/edittextstyle"
            android:maxLength="6"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_et_postcode"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mobile No.*     :"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_tv_mobilenumber"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:maxLength="10"
            android:id="@+id/pickup_et_mobilenumber"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Landline No.   :"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_tv_landlineno"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:maxLength="10"
            android:id="@+id/pickup_et_landlineno"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Email Id.*         :"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_tv_emailid"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:singleLine="true"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_et_emailid"
            />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center"
        android:id="@+id/pickup_button_next"
        />




</LinearLayout>
    </ScrollView>
