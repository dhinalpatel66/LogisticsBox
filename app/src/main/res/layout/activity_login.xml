<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#d3d3d3"
    tools:context="com.example.admin.logisticbox.Login">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="120dp"
    android:text="Logistic Box"
    android:textColor="#000"
    android:textSize="50dp"

    android:fontFamily="cursive"/>
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColorHint="#817f7f"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/login_etbx_username"
        />
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="#817f7f"
        android:layout_gravity="center"
        android:textColor="#000"
        android:inputType="textWebPassword"
        android:id="@+id/login_etbx_password"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Log in"
        android:layout_gravity="center"
        android:id="@+id/login_btn_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New User"
            android:textSize="15dp"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/login_txbx_signup"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Forgot Passsword?"
            android:textColor="#000"
            android:textSize="15dp"
            android:gravity="center"
            android:id="@+id/login_txbx_fp"/>



    </LinearLayout>

</LinearLayout>



