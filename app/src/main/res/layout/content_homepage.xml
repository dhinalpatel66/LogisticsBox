<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.logisticbox.homepage"
    android:background="#d3d3d3"
    tools:showIn="@layout/app_bar_homepage"

    android:weightSum="8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="5">
        <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoStart="true"
            android:flipInterval="2000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/slider1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/slider2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/slider3"/>


        </ViewFlipper>



                </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Book Shipment"
            android:background="#c4c4c4"
            android:id="@+id/button_bookshipment"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >


        <Button
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Ship Tracking"
            android:background="#a6a6a6"
            android:id="@+id/button_shiptracking"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Services"
            android:background="#a6a6a6"
            android:id="@+id/button_services"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Claim"
            android:background="#7b7a7a"
            android:id="@+id/button_claim"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Feedback"
            android:background="#7b7a7a"
            android:id="@+id/button_feedback"
            />



    </LinearLayout>




</LinearLayout>
</ScrollView>